{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "src",
    "strictNullChecks": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@errors/*": ["errors/*"],
      "@protocols/*": ["protocols/*"],
      "@validators/*": ["validators/*"]
    },
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
